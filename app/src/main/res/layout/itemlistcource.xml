<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10sp"
    android:layout_marginVertical="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNgay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28/07/2023"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PhÃ²ng T308 (Nha T)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtThoiGian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17:30 - 19:30 PM"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="React Native - MOB1234"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/icon_menu_right" />
    </LinearLayout>

</androidx.cardview.widget.CardView>