<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="5sp"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txtThoiGianBatDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:30 - 19:30 PM"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5sp"
            />
    </LinearLayout>

    <View
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        android:layout_marginHorizontal="10sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elevation="@dimen/cardview_compat_inset_shadow"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16sp"
            android:background="@drawable/custom_selector_cource"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtMon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="React Native - MOB1234"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/txtNoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chapter 1: Cài đặt môi trường Re..."
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="4sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4sp">
                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/icon_location_on_24"/>
                    <TextView
                        android:id="@+id/txtPhong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phòng T1109"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginLeft="4sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4sp">
                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/img_profile"/>
                    <TextView
                        android:id="@+id/txtGiangVien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Trí Định"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginLeft="4sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>