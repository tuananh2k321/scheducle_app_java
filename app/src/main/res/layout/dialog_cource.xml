<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutItem"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="16dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="20dp"
            >
            
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/primaryColor"/>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="-75dp"
                android:padding="20dp"
                android:background="@drawable/round_back_white_stroke">
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_back_white"
                   />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_bee_gold"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/txtNgay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày: 19/07/2023"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtPhong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phòng: T308 (Nha T)"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtGiangDuong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảng đường: Phan Mem Quang Trung"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/txtLop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lớp: MD17306"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="10sp">

                        <TextView
                            android:id="@+id/txtThoiGian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian: 17:30 - 19:30"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtMon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày:Môn: React Native"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtMaMon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mã môn: MOB104"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtGiangVien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giảng viên: channn3"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/txtCa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ca: 5"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link học trực tuyến: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/txtLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link học trực tuyến:https://meet.google.com/yzc-kcaj-rzq"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>
                
                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_button_dialog"
                    android:text="Ok"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    />

            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>